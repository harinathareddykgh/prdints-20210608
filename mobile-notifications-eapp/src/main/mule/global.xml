  </anypoint-mq:config>
  <anypoint-mq:circuit-breaker name="Circuit_breaker" tripTimeout="2" doc:name="Circuit breaker" doc:id="2381dcbf-d887-483d-a793-5fd8512eadd9" onErrorTypes="APP:BAD_REQUEST" errorsThreshold="1" tripTimeoutUnit="MINUTES" />
